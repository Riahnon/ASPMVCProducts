@model IEnumerable<ASPMVCProducts.Models.ProductList>

@{
    ViewBag.Title = "Lists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="table-productlists">
    @if(Model.Count() > 0 ){
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    }
@foreach (var item in Model)
{
    <tr id="tr-productlist-@item.Id">
        <td>
            <a href="/ProductLists/@item.Id">
                @Html.DisplayFor(modelItem => item.Name)
            </a>
        </td>
        <td>
            @Html.ActionLink("View", "Index", "ProductEntries", (object)new { listid = item.Id }, null)
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
